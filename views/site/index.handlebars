<section class="container-fluid" id="intro">
    <div class="row p-5">
        <div class="col-md-5 offset-1 p-4">
            <h1 id="titulo">Blog de viagens</h1>
            <p id="paragrafo">Aqui você encontrará as melhores viagens e histórias na estrada</p>
        </div>
        <div class="col-md-5 offset-1">
            <img src="assets/imgsProducao/ImgIntro.png" alt="imagem de viagem" id="img_intro">
        </div>
    </div>
</section>

<section id="viagens" class="d-flex justify-content-center align-items-center row">
    {{#each viagens}}
        <div id="viagem" class="d-flex flex-column justify-content-center align-items-center text-center p-3 col-md-3 offset-1">
            <img src={{img}} alt="">
            <h1> {{titulo}} </h1>
            <p> {{paragrafo}} </p>
        </div>
    {{/each}}
</section>

<section class="p-4 d-flex flex-column align-items-center justify-content-center" id="postagens">
    <h1>Postagens recentes</h1>
    {{#each recentes}}
    <div class="card d-flex flex-column justify-content-center align-items-center text-center px-5 mt-4" id="card">
        <h1> {{titulo}} </h1>
        <h4> {{subtitulo}} </h4>
        <p> {{descricao}} </p>
    </div>
    {{else}}
    Nenhuma viagem cadastrada
    {{/each}}
</section>